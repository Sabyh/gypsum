{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "/",
    "noUnusedLocals": false,
    "types": ["@types/node"],
    "sourceMap": true
  },

  "include": [
    "."
  ],

  "exclude": [
    "./node_modules"
  ]
}